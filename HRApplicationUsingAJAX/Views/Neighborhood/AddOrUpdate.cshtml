@model HRApplicationUsingAJAX.Models.Neighborhood

@using (Html.BeginForm("", "", FormMethod.Post,new {@id = "frmAdd"}))
{
    @Html.HiddenFor(x => x.ID)

    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Governorate.Name)
        @Html.DropDownListFor(x => x.GovernorateId, ViewData["Governorates"] as SelectList, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Governorate.Name)
    </div>
}
